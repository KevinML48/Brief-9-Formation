{% extends 'base.html.twig' %}

{% block title %}Nos jeux{% endblock %}

{% block body %}
   {% for jeu in jeux %}
    <div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{jeu.image}}" alt="" width="190px" height="255px">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{jeu.titre}}</h5>
        <p class="card-text">{{jeu.description}}</p>
        <p><a href="{{ path('jeuxavis', {'id': jeu.id}) }}">Voir les avis</a></p>
      </div>
    </div>
  </div>
</div>
{% endfor %}

 
{% endblock %}
