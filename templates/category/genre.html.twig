{% extends 'base.html.twig' %}

{% block title %} Categorie {% endblock %}

{% block body %}
{% for jeu in jeux %}
        <div class="card" style="width: 18rem;">
  <img src="{{ jeu.image }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{ jeu.titre }}</h5>
    <p class="card-text">{{ jeu.description|slice(0, 100) ~ '...'  }}</p>
    <a href="#" class="btn btn-primary">Voir le jeu</a>
  </div>
</div>
{% endfor %}

{% endblock %}

